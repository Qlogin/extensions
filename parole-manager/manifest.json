{
    "manifest_version": 2,
  
    "name":        "The Password Manager",
    "description": "A new most powerful tool to control your passwords",
    "version":     "0.4",
    "permissions": ["tabs"],
  
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "64": "icons/icon-64.png"
    },
    
    "background": {
        "scripts": ["main.js"]
    },

    "browser_action": {
        "default_title": "Parole Manager",
        "default_icon":  "icons/icon-32.png",
        "default_popup": "popup/panel.html"
    }
}