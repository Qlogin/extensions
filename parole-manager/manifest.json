{
  "manifest_version": 2,

  "name": "The Password Manager",
  "description": "A new most powerful tool to control your passwords",
  "version": "0.2.1",

  "background": {
    "persistent": true,
    "scripts": ["data/bg.js"]
  },

  "browser_action": {
    "default_icon": "data/icon-32.png",
    "default_popup": "data/panel.html"
  },

  "permissions": ["tabs"]
}