{
    "manifest_version": 2,

    "name":        "Parole Manager",
    "description": "The password manager - a new most powerful tool to control your passwords",
    "version":     "1.0.1",
    "author":      "Roman Qlogin",
    "permissions": ["tabs", "activeTab", "storage"],

    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "64": "icons/icon-64.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": false
    },

    "browser_action": {
        "default_title": "Parole Manager",
        "default_icon" : "icons/icon-32.png",
        "default_popup": "popup/panel.html"
    }
}
